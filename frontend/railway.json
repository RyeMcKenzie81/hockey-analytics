{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "cd frontend && npm ci && npm run build",
    "watchPatterns": [
      "frontend/**"
    ]
  },
  "deploy": {
    "startCommand": "cd frontend && npm start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}